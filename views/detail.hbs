<form action="/todos/{{ todo.id }}?_method=DELETE" method="POST" style="display: inline;">
  <div class="input-group">
    <div class="input-group-prepend">
      <div class="input-group-text">
        <input type="checkbox" name="isDone" {{#if todo.isDone}} checked {{/if}} disabled>
      </div>
    </div>
    <input class="form-control" type="text" placeholder="name" name="name" value="{{ todo.name }}" disabled>
    <div class="input-group-append">
      <a href="/todos/{{ todo.id }}/edit" class="btn btn-success">edit</a>
      <button type="submit" class="btn btn-danger">delete</button>
    </div>
  </div>
</form>